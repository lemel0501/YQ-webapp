  <script>
  (function(){
    const tg = window.Telegram && window.Telegram.WebApp;

    function validHHMM(v){
      // å…è¨±ç©ºå­—ä¸²ï¼ˆè¡¨ç¤ºä¸å•Ÿç”¨ï¼‰ï¼Œæˆ– HH:MMï¼ˆ00-23:00-59ï¼‰
      if (!v) return true;
      const m = /^(\d{1,2}):(\d{2})$/.exec(v.trim());
      if (!m) return false;
      const hh = +m[1], mm = +m[2];
      return hh>=0 && hh<=23 && mm>=0 && mm<=59;
    }

    function collect(){
      // å…­è·¯å¸ƒæ—
      const chs = [];
      for (let i=0;i<6;i++){
        chs.push( document.getElementById('ch'+i).checked ? 1 : 0 );
      }
      // #1 é–€æª»
      let cn0 = parseInt(document.getElementById('cn0').value||'0',10);
      if (isNaN(cn0) || cn0<0) cn0 = 0;

      // #2 æ™‚é–“
      const ct1 = (document.getElementById('ct1').value||'').trim();
      if (!validHHMM(ct1)){
        alert('è«‹è¼¸å…¥æ­£ç¢ºçš„ #2 æ¯æ—¥æ¨æ’­æ™‚é–“ï¼ˆæ ¼å¼ HH:MMï¼Œä¾‹å¦‚ 17:30ï¼‰ï¼Œæˆ–ç•™ç™½åœç”¨ã€‚');
        throw new Error('bad time');
      }

      // â€”â€” æœ€å°å¯ç”¨ schema â€”â€” //
      return { chs, cn0, ct1 };
    }

    // é€å‡º
    const btn = document.getElementById('send');
    btn.addEventListener('click', ()=>{
      if (!(tg && tg.sendData)){
        alert('è«‹å¾ Telegram å…§é–‹å•Ÿæ­¤é ï¼ˆé»èŠå¤©è£¡çš„ã€Œâš™ï¸ é–‹å•Ÿè¨­å®šã€ï¼‰ã€‚å¤–éƒ¨ç€è¦½å™¨ç„¡æ³•é€å‡ºã€‚');
        return;
      }
      let payload;
      try{ payload = collect(); }catch(e){ return; }

      // ç”¨ä¸€è‡´æ ¼å¼é€å‡ºï¼štype + payload
      const packet = { type: "save_config", payload, version: 2 };
      tg.showAlert && tg.showAlert('è¨­å®šå·²é€å‡ºï¼Œè£ç½®å°‡å¥—ç”¨ã€‚');
      tg.sendData(JSON.stringify(packet));
      tg.close && tg.close();
    });

    // å¯é¸ï¼šåº•éƒ¨ä¸»æŒ‰éˆ•
    if (tg && tg.MainButton){
      tg.MainButton.setText('é€å‡ºåˆ°è£ç½®');
      tg.MainButton.onClick(()=>btn.click());
      tg.MainButton.show();
    }
  })();
  </script>

  <script>
  // WebApp ç’°å¢ƒæª¢æŸ¥
  (function(){
    const s = document.getElementById('tg_state');
    const tg = window.Telegram && window.Telegram.WebApp;
    if (!tg) { s.textContent = 'âŒ é Telegram WebApp'; s.style.background = '#ffd7d7'; return; }
    if (!tg.sendData){ s.textContent = 'âŒ WebApp ç„¡ sendDataï¼ˆå¤–éƒ¨é–‹å•Ÿï¼‰'; s.style.background = '#ffd7d7'; return; }
    tg.ready && tg.ready();
    tg.expand && tg.expand();
    s.textContent = 'âœ… Telegram WebApp å°±ç·’';
    s.style.background = '#d7ffd7';
  })();
